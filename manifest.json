{
  "manifest_version": 3,
  "name": "Bluesky Overhaul",
  "version": "1.3.0",
  "description": "Improves UI and UX for Bluesky web app",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [],
  "content_scripts": [{
    "matches": ["https://staging.bsky.app/*"],
    "js": ["dist/bundle.js"]
  }]
}
